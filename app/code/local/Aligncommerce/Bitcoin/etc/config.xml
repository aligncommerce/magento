<config>
    <modules>
        <Aligncommerce_Bitcoin>
            <version>0.1.0</version>
        </Aligncommerce_Bitcoin>
    </modules>
    <frontend>
        <routers>
            <bitcoin>
                <use>standard</use>
                <args>
                    <module>Aligncommerce_Bitcoin</module>
                    <frontName>bitcoin</frontName>
                </args>
            </bitcoin>
        </routers>
        <layout>
            <updates>
                <bitcoin>
                    <file>bitcoin.xml</file>
                </bitcoin>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <bitcoin>
                <use>admin</use>
                <args>
                    <module>Aligncommerce_Bitcoin</module>
                    <frontName>bitcoin</frontName>
                </args>
            </bitcoin>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Aligncommerce_Bitcoin>
                            <title>Bitcoin Module</title>
                            <sort_order>10</sort_order>
                        </Aligncommerce_Bitcoin>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <bitcoin>
                                            <title>Bitcoin</title>
                                        </bitcoin>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <bitcoin>
                    <file>bitcoin.xml</file>
                </bitcoin>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <bitcoin>
                <class>Aligncommerce_Bitcoin_Model</class>
                <resourceModel>bitcoin_mysql4</resourceModel>
            </bitcoin>
            <bitcoin_mysql4>
                <class>Aligncommerce_Bitcoin_Model_Mysql4</class>
                <entities>
                    <bitcoin>
                        <table>bitcoin</table>
                    </bitcoin>
                </entities>
            </bitcoin_mysql4>
        </models>
        <resources>
            <bitcoin_setup>
                <setup>
                    <module>Aligncommerce_Bitcoin</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bitcoin_setup>
            <bitcoin_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bitcoin_write>
            <bitcoin_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bitcoin_read>
        </resources>
        <blocks>
            <bitcoin>
                <class>Aligncommerce_Bitcoin_Block</class>
            </bitcoin>
        </blocks>
        <helpers>
            <bitcoin>
                <class>Aligncommerce_Bitcoin_Helper</class>
            </bitcoin>
        </helpers>
    </global>
    <default>
        <payment>
            <bitcoin_btc>
                <active>0</active>
                <model>bitcoin/btc</model>
                <title>Align Commerce Bit Coin</title>
                <payment_action>authorize</payment_action>
            </bitcoin_btc>
            <aligncommerce_banktransfer>
                <active>0</active>
                <model>bitcoin/banktransfer</model>
                <title>Align Commerce Bank Transfer</title>
                <payment_action>authorize</payment_action>
            </aligncommerce_banktransfer>
        </payment>
    </default>
</config>